<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.training.petstore.view.fragment.ManageUserFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1.0"
            app:cardBackgroundColor="@color/grey_5"
            app:cardCornerRadius="3.0dip"
            app:cardElevation="0.0dip">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_manage_user_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginTop="@dimen/spacing_smlarge"
                        android:layout_marginBottom="@dimen/spacing_smlarge"
                        android:tint="@color/indigo_500"
                        app:srcCompat="@drawable/ic_person_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册用户"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_90" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1.0"
            app:cardBackgroundColor="@color/grey_5"
            app:cardCornerRadius="3.0dip"
            app:cardElevation="0.0dip">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_manage_user_modify"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginTop="@dimen/spacing_smlarge"
                        android:layout_marginBottom="@dimen/spacing_smlarge"
                        android:tint="@color/indigo_500"
                        app:srcCompat="@drawable/ic_baseline_edit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改用户"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_90" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1.0"
            app:cardBackgroundColor="@color/grey_5"
            app:cardCornerRadius="3.0dip"
            app:cardElevation="0.0dip">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleBlack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_manage_user_delete"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginTop="@dimen/spacing_smlarge"
                        android:layout_marginBottom="@dimen/spacing_smlarge"
                        android:tint="@color/indigo_500"
                        app:srcCompat="@drawable/ic_baseline_delete" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除用户"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_90" />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>