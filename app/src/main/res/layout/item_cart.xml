<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cart_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_middle"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_cart_image"
        android:layout_width="90.0dip"
        android:layout_height="90.0dip"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="@dimen/spacing_middle"
        android:layout_height="0.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_cart_name"
                app:fontFamily="sans-serif-medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="小白"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_90" />

            <TextView
                android:id="@+id/item_cart_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天青色等烟雨，而我咕咕嘎嘎噶"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey_40" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="@dimen/spacing_small" />

            <TextView
                android:id="@+id/item_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="¥ 280"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_green_600"
                android:textStyle="bold" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/item_cart_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</LinearLayout>